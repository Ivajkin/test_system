@model test_system.Models.LogOnModel

@{
    ViewBag.Title = "Вход в систему";
}
<p align="right">
    Имя компьютера: @ViewBag.NAME<br />
    Имя пользователя: @ViewBag.USER<br />
    IP-адрес: @ViewBag.IP @Request.ServerVariables["REMOTE_ADDR"]
</p>
<h2>Вход в систему</h2>
<p>
    Для того чтоб войти в систему в качестве администратора, необходимо ввести соответствующую информацию об аккаунте (логин и пароль).
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Вход был неудачным. Пожалуйста, исправьте ошибки и повторите попытку.")

@using (Html.BeginForm()) {
    <div>
        <fieldset>
            <legend>Информация об аккаунте</legend>

            <div class="editor-label">
                Логин:
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-label">
                Пароль:
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="editor-label">
                @Html.CheckBoxFor(m => m.RememberMe)
                Запомнить меня
            </div>

            <p>
                <input type="submit" value="Войти" />
            </p>
        </fieldset>
    </div>
}
