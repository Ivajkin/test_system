@model test_system.Models.ChangePasswordModel

@{
    ViewBag.Title = "Изменение пароля";
}
<p align="right">
    Имя компьютера: @ViewBag.NAME<br />
    Имя пользователя: @ViewBag.USER<br />
    IP-адрес: @ViewBag.IP @Request.ServerVariables["REMOTE_ADDR"]
</p>
<h2>Изменение пароля администратора</h2>
<p>
    Здесь вы можете изменить пароль от аккаунта администратора системы. 
</p>
<p>
    Новый пароль должен содержать минимум @Membership.MinRequiredPasswordLength знаков.
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "Изменение пароля была неудачно. Пожалуйста, исправьте ошибки и повторите попытку.")
    <div>
        <fieldset>
            <legend>Информация об аккаунте</legend>

            <div class="editor-label">
                Старый пароль:
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.OldPassword)
                @Html.ValidationMessageFor(m => m.OldPassword)
            </div>

            <div class="editor-label">
                Новый пароль:
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.NewPassword)
                @Html.ValidationMessageFor(m => m.NewPassword)
            </div>

            <div class="editor-label">
                Новый пароль (подтверждение):
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.ConfirmPassword)
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>

            <p>
                <input type="submit" value="Изменить пароль" />
            </p>
        </fieldset>
    </div>
}
